<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.android.bakingapp.RecipeDetailActivity">

    <!--android:layout_gravity="center_vertical"-->
    <LinearLayout
        android:layout_width="@dimen/left_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

        <FrameLayout android:id="@+id/list_elements_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

    </LinearLayout>
    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="@dimen/right_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"  >

        <FrameLayout android:id="@+id/play_step_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

    </LinearLayout>
</LinearLayout>